<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <table class="table table-bordered table-condensed">
        <tr>
          <th>Title</th>
          <th>Postion</th>
          <th>Company Name</th>
          <th>Location</th>
          <th>Action</th>
        </tr>

          <% @jobs.each do |job| %>
          <tr>
          <td><%= job.title %></td>
          <td><%= job.postiion %></td>
          <td><% job.company_name %></td>
          <td><%= job.location %></td>
          <td>
            <%= link_to 'Show', job , class:"btn btn-info"%>
            <% if(admin_signed_in?) %>
              <%= link_to 'Edit', edit_job_path(job) %>
              <%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </td>
          </tr>
          <% end %>

      </table>
    </div>
  </div>
</div>
